pipeline{
    agent any

    stages{
        stage('COMPILE'){
            steps{
                withMaven(maven : 'Maven_3_5_0'){
                    sh 'mvn clean compile'
                }
            }
        }

        stage('TESTING'){
            steps{
                withMaven(maven : 'Maven_3_5_0'){
                    sh 'mvn test'
                }
            }
        }

        stage('DEPLOYMENT'){
            steps{
                withMaven(maven : 'Maven_3_5_0'){
                    sh 'mvn deploy'
                }
            }
        }
    }

    /**Workspace cleanup*/
    post{
        always{
            cleanWs()
        }
    }
}